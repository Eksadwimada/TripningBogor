<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/cardView"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="center"
android:layout_marginLeft="10dp"
android:layout_marginTop="4dp"
android:layout_marginRight="10dp"
android:layout_marginBottom="4dp"
card_view:cardCornerRadius="8dp"
card_view:cardElevation="12dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/bg_wave"
    android:layout_height="100dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageWisata"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tvNamaWisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/imageWisata"
        android:layout_toRightOf="@id/imageWisata"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="@string/tour_title"/>

    <TextView
        android:id="@+id/tvLokWisata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamaWisata"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@id/imageWisata"
        android:layout_toRightOf="@id/imageWisata"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="Bogor" />

</RelativeLayout>

</androidx.cardview.widget.CardView>